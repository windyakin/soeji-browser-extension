{
  "manifest_version": 3,
  "name": "Soeji Uploader for NAI",
  "version": "1.0.3",
  "description": "Upload NAI generated images directly to your soeji library",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://novelai.net/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://novelai.net/*"],
      "js": ["content-scripts/upload.js"],
      "css": ["content-scripts/upload.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "soeji-uploader@example.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
